    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Taux</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for typecredit in typecredits %}
            <tr>
                <td>{{ typecredit.id }}</td>
                <td>{{ typecredit.nom }}</td>
                <td>{{ typecredit.taux }}</td>
                <td>
                <button onclick="window.location.href='{{ path('app_typecredit_show', {'id': typecredit.id}) }}'" class="btn btn-primary">Show</button>
                   <button onclick="window.location.href='{{ path('app_typecredit_edit', {'id': typecredit.id}) }}'" class="btn btn-primary">edit</button>
                   
                </td>
            </tr>
