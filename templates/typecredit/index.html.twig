            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
<button onclick="window.location.href='{{ path('app_typecredit_new') }}'" class="btn btn-primary">Create new</button>

{% endblock %}
