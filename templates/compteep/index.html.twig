{# templates/compteep/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Compteep index{% endblock %}

{% block body %}
    <h1>Mes comptes d'épargne Actifs</h1>

  
   <!-- Ajout du formulaire de recherche par RIB -->
<form id="searchForm">
    <label for="ribSearch">Recherche par RIB :</label>
    <input type="text" id="ribSearch" name="ribSearch" class="form-control input-default mr-2" maxlength="11" pattern="[0-9]+">
    <hr>
</form>


    <!-- Ajout du conteneur pour les résultats de la recherche -->
    <div id="searchResults"></div>
<div id="tableContainer">
    <table class="table">
        <thead>
            <tr>
                <th>Rib</th>
                <th>Solde</th>
                <th>Description</th>
                <th>afficher plus de details</th>
                <th>Modifier</th>
                <th>desactiver</th>
            </tr>
        </thead>
        <tbody>
        {% for compteep in compteeps %}
            <tr>
                <td>{{ compteep.Rib }}</td>
                <td>{{ compteep.solde }}</td>
                <td>{{ compteep.description }}</td>
                <td>
                    <button onclick="window.location.href='{{ path('app_compteep_show', {'id': compteep.id}) }}'" class="btn tp-btn-light btn-primary">Plus</button>
                </td>
                <td> 
                    <button onclick="window.location.href='{{ path('app_compteep_edit', {'id': compteep.id}) }}'" class="btn tp-btn-light btn-primary">Modifier</button>
                </td>
                <td> 
                    <button onclick="window.location.href='{{ path('app_demande_desac_c_e_new', {'compteepId': compteep.id}) }}'" class="btn tp-btn-light btn-primary">Desactiver</button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun compte trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
    <button onclick="window.location.href='{{ path('app_compteep_new') }}'" class="btn tp-btn-light btn-primary">Ajouter un compte</button>

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script>
    $(document).ready(function() {
        // Variable pour stocker le contenu initial
        var initialTableContent = $('#tableContainer').html();

        $('#ribSearch').on('input', function() {
            searchCompteEp();
        });

        function searchCompteEp() {
            var rib = $('#ribSearch').val();

            // Si le champ de recherche est vide ou contient uniquement des espaces
            if (!rib.trim()) {
                // Réaffiche le contenu initial
                $('#tableContainer').html(initialTableContent);
            } else {
                // Si le champ n'est pas vide, effectue la recherche
                $.ajax({
                    type: 'POST',
                    url: '{{ path('app_search_compteep_by_rib') }}',
                    data: { rib: rib },
                    success: function(data) {
                        $('#tableContainer').html(data);
                    },
                    error: function(error) {
                        console.log('Erreur lors de la recherche :', error);
                    }
                });
            }
        }
    });
</script>




{% endblock %}
