{% extends 'base.html.twig' %}

{% block title %}Compteep index{% endblock %}

{% block body %}
    <h1>Mes comptes d'epargnes</h1>

    <table class="table">
        <thead>
            <tr>
                
                <th>Rib</th>
                <th>Solde</th>
                <th>Description</th>
                <th>afficher plus de details</th>
                <th>Modifier</th>
            </tr>
        </thead>
        <tbody>
        {% for compteep in compteeps %}
            <tr>
             
                <td>{{ compteep.Rib }}</td>
                <td>{{ compteep.solde }}</td>
                
                <td>{{ compteep.description }}</td>
                <td>
                  <button onclick="window.location.href='{{ path('app_compteep_show', {'id': compteep.id}) }}'" class="btn tp-btn-light btn-primary">Plus</button>

                 
                </td>
<td> 
                  <button onclick="window.location.href='{{ path('app_compteep_edit', {'id': compteep.id}) }}'" class="btn tp-btn-light btn-primary">Modifier</button>

                   </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

   <button onclick="window.location.href='{{ path('app_compteep_new') }}'" class="btn tp-btn-light btn-primary">Ajouter un compte</button>

{% endblock %}
