{% extends 'base.html.twig' %}

{% block title %}Cheque{% endblock %}

{% block body %}
    <h1>Cheque</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cheque.id }}</td>
            </tr>
            <tr>
                <th>Num</th>
                <td>{{ cheque.num }}</td>
            </tr>
            <tr>
                <th>Numcompte</th>
                <td>{{ cheque.numcompte }}</td>
            </tr>
            <tr>
                <th>Montant</th>
                <td>{{ cheque.montant }}</td>
            </tr>
            <tr>
                <th>Signature</th>
                <td>{{ cheque.signature }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ cheque.date ? cheque.date|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

