{% extends 'base.html.twig' %}

{% block title %}Liste des beneficiaires{% endblock %}

{% block body %}
    <h1>Beneficiaire index</h1>
    <form id="searchByNameForm">
    <label for="nameSearch">Recherche par Nom :</label>
    <input type="text" id="nameSearch" name="nameSearch" class="form-control">
    <button type="button" class="btn btn-info" onclick="searchBenefByName()">Rechercher</button>
</form>
<div id="searchResultsByName"></div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Rib</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for beneficiaire in beneficiaires %}
            <tr>
                <td>{{ beneficiaire.id }}</td>
                <td>{{ beneficiaire.nom }}</td>
                <td>{{ beneficiaire.prenom }}</td>
                <td>{{ beneficiaire.Rib }}</td>
                <td>
                    <div class="mb-3">
                        <!-- Bouton Show -->
                        <a href="{{ path('app_beneficiaire_show', {'id': beneficiaire.id}) }}" class="btn btn-info">Show</a>

                        <!-- Bouton Edit -->
                        <a href="{{ path('app_beneficiaire_edit', {'id': beneficiaire.id}) }}" class="btn btn-primary">Edit</a>

                        <!-- Bouton Virement -->
                        <a href="{{ path('app_virement_new', {'beneficiaireId': beneficiaire.id}) }}" class="btn btn-success">Virement</a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>

    function searchBenefByName() {
        var name = $('#nameSearch').val();

        $.ajax({
            type: 'POST',
            url: '{{ path('app_search_benef_by_name') }}',
            data: { name: name },
            success: function(data) {
                // Ici, vous pourriez vouloir mettre à jour votre tableau de bénéficiaires
                // ou afficher les résultats dans un élément dédié, comme '#searchResultsByName'
                $('#searchResultsByName').html(data);
            },
            error: function(error) {
                console.log('Erreur lors de la recherche par nom :', error);
            }
        });
    }
</script>
    
{% endblock %}
